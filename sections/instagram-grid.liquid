{{ 'section-instagram-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- assign columns_desktop = section.settings.columns_desktop | plus: 0 -%}
{%- assign columns_mobile = section.settings.columns_mobile | plus: 0 -%}

<section class="instagram-grid color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <div class="instagram-grid__header">
      <div class="instagram-grid__intro">
        {%- if section.settings.kicker != blank -%}
          <p class="caption-with-letter-spacing">{{ section.settings.kicker }}</p>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h2 class="title inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
        {%- if section.settings.text != blank -%}
          <div class="rte">{{ section.settings.text }}</div>
        {%- endif -%}
      </div>
      <div class="instagram-grid__cta">
        {%- if section.settings.button_label != blank -%}
          <a
            class="button button--{{ section.settings.button_style }}"
            {% if section.settings.account_url == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.account_url }}"
              target="_blank"
              rel="noopener"
            {% endif %}
          >
            {{ section.settings.button_label | escape }}
          </a>
        {%- endif -%}
        {%- if section.settings.account_handle != blank -%}
          <p class="instagram-grid__handle caption">
            <a
              class="link"
              {% if section.settings.account_url == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.account_url }}"
                target="_blank"
                rel="noopener"
              {% endif %}
            >
              {{ section.settings.account_handle }}
            </a>
          </p>
        {%- endif -%}
      </div>
    </div>

    <ul
      class="instagram-grid__list grid grid--{{ columns_desktop }}-col-desktop grid--{{ columns_mobile }}-col-tablet-down"
      role="list"
      {% if settings.animations_reveal_on_scroll %}
        data-cascade
      {% endif %}
    >
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {%- liquid
            assign link_url = block.settings.link
            if link_url == blank
              assign link_url = section.settings.account_url
            endif

            assign alt_text = block.settings.alt_text
            if alt_text == blank and block.settings.image != blank
              assign alt_text = block.settings.image.alt
            endif
            if alt_text == blank
              assign alt_text = section.settings.title
            endif
          -%}
          <li
            class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {{ block.shopify_attributes }}
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            <a
              class="instagram-grid__link"
              {% if link_url == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ link_url }}"
                target="_blank"
                rel="noopener"
              {% endif %}
            >
              <div class="instagram-grid__media media media--square global-media-settings global-media-settings--no-shadow">
                {%- if block.settings.image != blank -%}
                  {%- capture sizes -%}
                    (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - 10rem) / {{ columns_desktop }}),
                    (min-width: 750px) calc((100vw - 8rem) / {{ columns_desktop }}),
                    calc((100vw - 4rem) / {{ columns_mobile }})
                  {%- endcapture -%}
                  {{
                    block.settings.image
                    | image_url: width: 1600
                    | image_tag:
                      widths: '165, 220, 330, 440, 550, 660, 880, 1100, 1320, 1600',
                      sizes: sizes,
                      alt: alt_text
                  }}
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
            </a>
          </li>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..columns_desktop) -%}
          <li class="grid__item">
            <div class="instagram-grid__media media media--square global-media-settings global-media-settings--no-shadow">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          </li>
        {%- endfor -%}
      {%- endif -%}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Instagram grid",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "Follow along"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Follow on Instagram"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Little moments, new drops, and behind-the-scenes.</p>"
    },
    {
      "type": "text",
      "id": "account_handle",
      "label": "Account handle",
      "default": "@junelingerie2022"
    },
    {
      "type": "url",
      "id": "account_url",
      "label": "Account URL"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Follow on Instagram"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "options": [
        { "value": "primary", "label": "Primary" },
        { "value": "secondary", "label": "Secondary" }
      ],
      "default": "primary"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Columns on desktop",
      "min": 3,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on mobile",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ],
      "default": "2"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Instagram grid",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
