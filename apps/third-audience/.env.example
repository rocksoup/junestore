# Shopify Third Audience App Configuration
# Copy this to .env and fill in your values

# Your Shopify store domain
SHOPIFY_STORE_DOMAIN=june-lingerie-2.myshopify.com

# Shopify Admin API Access Token
# Create a private app or custom app in Shopify Admin with read access to:
# - Products, Collections, Pages, Articles, Shop
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxx

# Your public store URL for canonical links
STORE_PUBLIC_URL=https://june-lingerie-2.myshopify.com

# Port for the app server
PORT=3001

# Optional: App Proxy signature secret (for verifying requests from Shopify)
# Found in your app's App Proxy settings
SHOPIFY_APP_PROXY_SECRET=
